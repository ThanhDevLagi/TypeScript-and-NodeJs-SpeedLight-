<%-include('./templates/header.ejs')%>
<div class="background-login d-flex justify-content-center align-items-center">
  <form id="loginForm" method="post">
    <div class="box-container d-flex flex-column gap-4">
      <h2 class="text-center">Đăng Nhập</h2>
        <span class="error-message text-center" id="error-login"><%=message%></span>
        <div class="box d-flex flex-column">
          <label for="email">Email</label>
          <input type="text" id="email" name="email" placeholder="Nhập Email">
          <span class="error" id="emailError"></span>
        </div>
        <div class="box d-flex flex-column">
          <label for="password">Mật Khẩu</label>
          <input type="password" id="password" name="password" placeholder="Nhập Mật Khẩu">
          <span class="error" id="passwordError"></span>
        </div>
        <div class="d-flex justify-content-between">
          <div class="d-flex gap-2">
            <input type="checkbox">
            <label for="">Ghi nhớ mật khẩu</label>
          </div>
          <a href="">Quên Mật Khẩu ?</a>
        </div>
        <button type="submit" id="submit">Đăng Nhập</button>
        <div class="regis text-center">
          <span>Bạn chưa có tài khoản ? </span>
          <a href="/register">Đăng ký</a>
        </div>
      </div>
    </form>
  </div>
<%-include('./templates/footer.ejs')%>
