<%-include('./templates/header_admin.ejs')%>
<div class="col-10" id="main-admin">
    <div class="main--content">
      <div class="header--wrapper">
        <div class="header--title">
          <span>Primary</span>
          <h2>Tạo Sản Phẩm</h2>
        </div>
        <div class="search--box">
          <i class="fa-solid fa-magnifying-glass"></i>
          <input type="text" placeholder="Tìm kiếm tại đây">
        </div>
        <div class="user--info">
          <div class="">
            <i class="fa-regular fa-comment"></i>
          </div>
          <div class="">
            <i class="fa-regular fa-bell"></i>
          </div>
          <div class="user-admin">
            <img src="../../public/imges/personal-rate/person1.jpg" alt="">
          </div>
        </div>
      </div>
    </div>
    <div class="detail--container round p-4">
      <span class="error-message text-center" id="error-register"><%=message%></span>
      <form id="formCreate" action="/admin/productCreate" method="post" enctype="multipart/form-data">
        <div class="error-span d-flex justify-content-center align-items-center mb-3">
          <span id="error-name" class="text-center text-danger body-medium"></span>
          <span id="succeed-name" class="text-center text-success body-medium"></span>
        </div>
        <div class="row d-flex justify-content-between gap-3">
          <div class="col-7 d-flex flex-column gap-3">
              <div class="d-flex flex-column gap-2">
                  <label for="name" class="form-label">Tên Sản Phẩm:</label>
                  <input id="name" name="name" class="p-2 round border-1 border-grey form-control" type="text" placeholder="Nhập tên sản phẩm">
              </div>
              <div class="d-flex flex-column gap-2">
                  <label for="fileImg" class="form-label">Hình Ảnh:</label>
                  <input id="fileImg" name="fileImg" class="p-2 round border-1 border-grey form-control" type="file" placeholder="Nhập tên sản phẩm">
              </div>
              <div class="d-flex flex-column gap-2">
                  <label for="categorySelect" class="form-label">Thương Hiệu:</label>
                  <select class="p-2 round border-1 border-grey form-select" name="brand" id="categorySelect">
                    <%categoriesValue.forEach(item=>{ %>
                      <option value="<%=item.id_category%>"><%=item.name_category%></option>
                    <%})%>
                  </select>
              </div>
              <div class="d-flex gap-2 flex-column">
                <label for="description" class="form-label">Mô Tả:</label>
                <textarea class="p-2 round border-1 border-grey form-control" name="description" id="description" cols="30" rows="10" placeholder="Nội dung mô tả"></textarea>
              </div>
              <div class="row">
                <div class="col-6 col-auto d-flex flex-column">
                  <label for="price" class="form-label">Giá:</label>
                  <input id="price" name="price" class="p-2 round border-1 border-grey form-control" type="text" placeholder="10.000.000 đ">
                </div>
                <div class="col-6 col-auto d-flex flex-column">
                  <label for="" class="form-label">Giá Khuyến mãi:</label>
                  <input id="price-coupon" class="p-2 round border-1 border-grey form-control" type="text" placeholder="1000đ">
                </div>
              </div>
          </div>
          <div class="col-5 col-md d-flex flex-column gap-4">
              <div class="image--products-detail">
                <img id="img" src="../../public/imges/AddProduct.jpg" class="round"  alt="">
              </div>
              <button type="submit" class="btn-buynow">Tạo Sản Phẩm</button>
          </div>
        </div>
      </form>
    </div>
</div>
<%-include('./templates/footer_admin.ejs')%>
